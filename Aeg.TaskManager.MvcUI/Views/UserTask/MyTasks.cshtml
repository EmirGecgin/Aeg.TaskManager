@{
    ViewBag.Title = "MyTasks";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.5.2/css/bootstrap.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/2.1.2/css/dataTables.bootstrap4.css" rel="stylesheet" />
<link href="~/Content/css/UserTask.css" rel="stylesheet" />
<div class="card my-4">
    <div class="card-body">
        <div>
            <div class="my-2">
                <h2 class="text-center  pb-1 border-bottom">İşlerim</h2>
            </div>
            <div class="board">
                <div class="row" style="width: 100%;">
                    <div class="col-md-4">
                        <div class="column" id="todo" ondrop="drop(event, 'todo')" ondragover="allowDrop(event)">
                            <h2 class="text-center">Todo</h2>
                            <hr>
                            <div id="divToDo" class="task-container" ondrop="drop(event)" ondragover="allowDrop(event)"></div>
                        </div>

                    </div>
                    <div class="col-md-4">
                        <div class="column" id="in-progress" ondrop="drop(event, 'in-progress')" ondragover="allowDrop(event)">
                            <h2 class="text-center">In Progress</h2>
                            <hr>
                            <div id="divInProgress" class="task-container" ondrop="drop(event)" ondragover="allowDrop(event)"></div>
                        </div>

                    </div>
                    <div class="col-md-4">
                        <div class="column" id="done" ondrop="drop(event, 'done')" ondragover="allowDrop(event)">
                            <h2 class="text-center">Done</h2>
                            <hr>
                            <div id="divDone" class="task-container" ondrop="drop(event)" ondragover="allowDrop(event)"></div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/Scripts/jquery-3.7.0.min.js"></script>
<script src="~/Content/js/MyTasks.js"></script>
@*<script src="~/Content/js/UserTask.js"></script>*@
