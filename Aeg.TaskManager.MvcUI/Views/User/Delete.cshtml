@model Aeg.TaskManager.Entity.User

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.5.2/css/bootstrap.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/2.1.2/css/dataTables.bootstrap4.css" rel="stylesheet" />
<div class="card my-4">
    <div class="card-body">
        <h2 class="text-center my-2 border-bottom pb-1">Kullanıcı Silme</h2>
        <div class="mt-3">
            <h5>Aşağıdaki bilgilere sahip olan kullanıcıyı silmek istediğinizden emin misiniz?</h5>

            <dl class="dl-horizontal border text-black" style="background: #f2f2f2">
                <dt>
                    @Html.DisplayNameFor(model => model.Username)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Username)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Email)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Email)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Password)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Password)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.NameSurname)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.NameSurname)
                </dd>

            </dl>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <div class="float-right">
                        <a class="btn btn-warning me-3" href="/User/Index">Kullanıcı Listesi</a>
                        <input type="submit" value="Sil" class="btn btn-primary" />
                    </div>
                </div>
            }
        </div>
    </div>
</div>
